<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="10dp">
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
        <com.github.florent37.shapeofview.shapes.CircleView android:layout_width="80dp" android:layout_height="80dp" app:shape_circle_borderColor="@color/white" app:shape_circle_borderWidth="1dp" style="@style/rc">
            <ImageView android:id="@+id/ivStore" android:background="@color/white" android:layout_width="80dp" android:layout_height="80dp" android:scaleType="centerCrop" android:contentDescription="@string/app_name"/>
        </com.github.florent37.shapeofview.shapes.CircleView>
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dp_5" android:layout_marginStart="@dimen/dp_5">
            <TextView android:textSize="20sp" android:textColor="@color/category_defaullt" android:id="@+id/tvStoreName" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dp_5" app:fontFamily="@font/roboto_medium" style="@style/tv"/>
            <TextView android:textSize="14sp" android:textColor="@color/category_defaullt" android:id="@+id/tvStoreDesc" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dp_5" app:fontFamily="@font/roboto_light" style="@style/tv"/>
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dp_16">
                <ImageView android:id="@+id/icStoreCall" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_store_call" android:contentDescription="@string/app_name"/>
                <ImageView android:id="@+id/icStoreNavigation" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dp_16" android:src="@drawable/ic_store_navigation" android:contentDescription="@string/app_name" android:layout_marginStart="@dimen/dp_16"/>
                <ImageView android:id="@+id/icStoreNavigationWeb" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dp_16" android:src="@drawable/ic_store_web" android:contentDescription="@string/app_name" android:layout_marginStart="@dimen/dp_16"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:id="@+id/ratingView" android:visibility="visible" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_margin="@dimen/dp_10">
        <TextView android:textColor="@color/category_defaullt" android:id="@+id/tvItemDesc" android:padding="8dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/choose_star_rating" app:fontFamily="@font/roboto" style="@style/tv"/>
        <androidx.appcompat.widget.AppCompatRatingBar android:id="@+id/rb" android:layout_width="wrap_content" android:layout_height="wrap_content" android:numStars="5" android:stepSize="1"/>
        <TextView android:textColor="@color/category_defaullt" android:padding="8dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/summary_of_your_review" app:fontFamily="@font/roboto" style="@style/tv"/>
        <EditText android:textColor="@color/category_defaullt" android:id="@+id/etSummary" android:background="@drawable/bg_review" android:padding="8dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/enter_summary_title" app:backgroundTint="@null" app:fontFamily="@font/roboto" style="@style/et"/>
        <TextView android:textColor="@color/category_defaullt" android:padding="8dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/review" app:fontFamily="@font/roboto" style="@style/tv"/>
        <EditText android:textColor="@color/category_defaullt" android:gravity="top|left|center_vertical|center_horizontal|center|start" android:id="@+id/etDescription" android:background="@drawable/bg_review" android:padding="8dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/enter_review" android:lines="5" app:backgroundTint="@null" app:fontFamily="@font/roboto" style="@style/et"/>
        <Button android:textSize="16sp" android:textColor="@color/white" android:gravity="center" android:layout_gravity="end" android:id="@+id/btnSend" android:paddingTop="2dp" android:paddingBottom="2dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dp_16" android:layout_marginBottom="@dimen/dp_16" android:text="@string/send" android:paddingStart="@dimen/dp_5" android:paddingEnd="@dimen/dp_5" style="@style/btn"/>
    </LinearLayout>
</LinearLayout>
