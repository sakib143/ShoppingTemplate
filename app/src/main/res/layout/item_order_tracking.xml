<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="120dp" android:layout_weight="10">
    <TextView android:textSize="14sp" android:textColor="@color/category_image_default" android:gravity="left|center_vertical|center_horizontal|center|start" android:layout_gravity="center" android:id="@+id/tvDate" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dp_10" android:maxLines="3" android:layout_weight="2" android:layout_marginStart="@dimen/dp_10" app:fontFamily="@font/roboto" style="@style/tvHead"/>
    <RelativeLayout android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="2">
        <View android:id="@+id/top" android:background="@drawable/dotted_vertical_line_active" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_above="@+id/center" android:layout_centerHorizontal="true"/>
        <ImageView android:id="@+id/center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_track_active" android:layout_centerHorizontal="true" android:layout_centerVertical="true"/>
        <View android:id="@+id/bottom" android:background="@drawable/dotted_vertical_line_active" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@+id/center" android:layout_centerHorizontal="true"/>
    </RelativeLayout>
    <LinearLayout android:layout_gravity="center" android:orientation="vertical" android:paddingRight="@dimen/btnVerticalPadding" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginRight="@dimen/dp_10" android:layout_weight="6" android:layout_marginEnd="@dimen/dp_10">
        <TextView android:textSize="17sp" android:textColor="@color/category_defaullt" android:layout_gravity="center" android:id="@+id/tvTitle" android:layout_width="match_parent" android:layout_height="wrap_content" android:maxLines="2" app:fontFamily="@font/roboto_medium" style="@style/tvHead"/>
        <TextView android:textSize="15sp" android:textColor="@color/category_image_default" android:layout_gravity="center" android:id="@+id/tvDesc" android:layout_width="match_parent" android:layout_height="wrap_content" app:fontFamily="@font/roboto" style="@style/tvHead"/>
    </LinearLayout>
</LinearLayout>
